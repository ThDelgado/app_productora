<p style="color: green"><%= notice %></p>

<h1>Grupo</h1>

<div id="groups">

<div class="container">
  <table>
        <thead>
            <tr>
                <th>#</th>
                <th class="text-center">Nombre del grupo:</th>
                <th class="text-center">Tipo de grupo</th>
                <th class="text-center">Debut</th>
                <th class="text-center">Contrato</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>

          <% @groups.each do |group| %>
            <tr>
                <th class="text-center"><%= group.id %></th>
                <td class="text-center"><%= group.name %></td>
                <td class="text-center"><%= group.type_group %></td>
                <td class="text-center"><%= group.type_group %></td>
                <td class="text-center"><%= group.debut_date %></td>
                <td class="text-center"><%= group .contract_id %></td>
    
                <td ><%= link_to "Ver", group %></td>
                <td><%= link_to "Editar", edit_group_path(group) %></td>
                <td><%= link_to "Eliminar", group, method: :delete %></td>
                <td></td>
            </tr>
          <% end %>
        </tbody>
    </table>

<%= link_to "Crear grupo", new_group_path %>


