<p style="color: green"><%= notice %></p>

<h1>Contracts</h1>

<div id="contracts">
  <% @contracts.each do |contract| %>
    <%= render contract %>
    <p>
      <%= link_to "Show this contract", contract %>
    </p>
  <% end %>
</div>

<%= link_to "New contract", new_contract_path %>


<h1>Apartments</h1>
    <table>
        <thead>
            <tr>
                <th>Number</th>
                <th>Building</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @apartments.each do |apartment| %>
            <tr>
                <td><%= apartment.number %></td>
                <td><%= apartment.building %></td>
                <td><%=link_to 'Show', apartment%></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to 'New Apartment', new_apartment_path %>