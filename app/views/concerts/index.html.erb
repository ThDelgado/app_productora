<p style="color: green"><%= notice %></p>

<h1>Concerts</h1>

<div id="concerts">
  <% @concerts.each do |concert| %>
    <%= render concert %>
    <p>
      <%= link_to "Show this concert", concert %>
    </p>
  <% end %>
</div>

<%= link_to "New concert", new_concert_path %>



<h1>Apartments</h1>
    <table>
        <thead>
            <tr>
                <th>Number</th>
                <th>Building</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @apartments.each do |apartment| %>
            <tr>
                <td><%= apartment.number %></td>
                <td><%= apartment.building %></td>
                <td><%=link_to 'Show', apartment%></td>
            </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to 'New Apartment', new_apartment_path %>